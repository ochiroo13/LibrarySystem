<AnchorPane xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainController">
	<children>
		<AnchorPane layoutX="-7.0" layoutY="-6.0"
			prefHeight="530.0" prefWidth="836.0"
			style="-fx-background-color: #2D3447;">
			<children>
				<ImageView fitHeight="594.0" fitWidth="886.0"
